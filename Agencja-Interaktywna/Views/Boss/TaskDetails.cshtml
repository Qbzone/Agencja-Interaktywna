@model Interactive_Agency.Models.ServiceProject
@{
    ViewData["Title"] = "TaskDetails";
}

<h1>Task details</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="TaskDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger" />
            <div class="form-group">
                <label class="control-label">Task name: @Html.DisplayFor(model => model.ServiceIdNavigation.ServiceName)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Task description: @Html.DisplayFor(model => model.Description)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Task start:  @Html.DisplayFor(model => model.AssignStart)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Task end:  @Html.DisplayFor(model => model.AssignEnd)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Task status: @Html.DisplayFor(model => model.Status)</label>
            </div>
        </form>
    </div>
</div>

<a asp-action="ProjectDetails" asp-route-projectId="@Model.ProjectId" class="btn btn-primary">Return</a>