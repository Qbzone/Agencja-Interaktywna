@model Interactive_Agency.Models.Employee
@{
    ViewData["Title"] = "Profile";
}

<h1>Profil</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Profile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Imię: @Html.DisplayFor(model => model.EmployeeIdNavigation.FirstName)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Nazwisko: @Html.DisplayFor(model => model.EmployeeIdNavigation.LastName)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Numer telefonu prywatny:  @Html.DisplayFor(model => model.EmployeeIdNavigation.PrivatePhoneNumber)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Numer telefonu służbowy:  @Html.DisplayFor(model => model.EmployeeIdNavigation.BusinessPhoneNumber)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Adres e-mail: @Html.DisplayFor(model => model.EmployeeIdNavigation.EmailAddress)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Adres zamieszkania: @Html.DisplayFor(model => model.HomeAddress)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Pensja: @Html.DisplayFor(model => model.Salary)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Numer PESEL: @Html.DisplayFor(model => model.PeselNumber)</label>
            </div>
        </form>
    </div>
</div>
