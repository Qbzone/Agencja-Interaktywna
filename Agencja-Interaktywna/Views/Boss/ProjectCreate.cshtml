@model Interactive_Agency.Models.Functional.ProjectCreateModel
@{
    ViewData["Title"] = "ProjectCreate";
}

<h1>Project create</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ProjectCreate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" />
            <div class="form-group">
                <label asp-for="Project.ProjectName" class="control-label">Project name</label>
                <input type="text" class="form-control" asp-for="@Model.Project.ProjectName" />
                <span asp-validation-for="ErrorHandler1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormFile" class="control-label">Project logo</label>
                <input asp-for="FormFile" class="form-control" />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Team.TeamId" class="control-label">Team</label>
                <select class="form-control" asp-for="@Model.Team.TeamId">
                    <option value="">Select team</option>
                    @{
                        foreach (var item in Model.Teams)
                        {
                            <option class="form-control" value="@item.TeamId">@item.TeamName</option>
                        }
                    }
                </select>
                <span asp-validation-for="ErrorHandler4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Project.CompanyId" class="control-label">Client</label>
                <select class="form-control" asp-for="@Model.Project.CompanyId">
                    <option value="">Select client</option>
                    @{
                        foreach (var item in Model.Companies)
                        {
                            <option class="form-control" value="@item.CompanyId">@item.CompanyName</option>
                        }
                    }
                </select>
                <span asp-validation-for="ErrorHandler2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Package.PackageId" class="control-label">Package</label>
                <select class="form-control" asp-for="@Model.Package.PackageId">
                    <option value="">Select package</option>
                    @{
                        foreach (var item in Model.Packages)
                        {
                            <option class="form-control" value="@item.PackageId">@item.PackageName</option>
                        }
                    }
                </select>
                <span asp-validation-for="ErrorHandler3" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <a asp-action="Index" class="btn btn-primary">Return</a>
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>