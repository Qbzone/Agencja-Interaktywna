@model Interactive_Agency.Models.Functional.TaskEditModel
@{
    ViewData["Title"] = "TaskEdit";
}

<h1>Edycja zadania</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="TaskEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.ServiceProject.ProjectId" />
            <div class="form-group">
                <input type="hidden" asp-for="@Model.ServiceProject.ServiceId" />
                <span asp-validation-for="ServiceProject.ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceProject.Description" class="control-label">Opis zadania</label>
                <input type="text" class="form-control" asp-for="@Model.ServiceProject.Description" />
                <span asp-validation-for="ServiceProject.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" class="form-control" asp-for="@Model.ServiceProject.AssignStart" />
                <span asp-validation-for="ServiceProject.AssignStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceProject.AssignEnd" class="control-label">Data zakończenia zadania</label>
                <input type="datetime-local" class="form-control" asp-for="@Model.ServiceProject.AssignEnd" />
                <span asp-validation-for="ServiceProject.AssignEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ServiceProject.Status" class="control-label">Edytuj status</label>
                <select class="form-control" asp-for="@Model.ServiceProject.Status">
                    <option class="form-control" value="Oczekuje na realizację">Oczekuje na realizację</option>
                    <option class="form-control" value="W trakcie realizacji">W trakcie realizacji</option>
                    <option class="form-control" value="Zakończone">Zakończone</option>
                </select>
                <span asp-validation-for="@Model.ServiceProject.Status" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <a asp-action="ProjectDetails" asp-route-id="@Model.ServiceProject.ProjectId" class="btn btn-primary">Wstecz</a>
                <input type="submit" value="Potwierdź zmiany" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>