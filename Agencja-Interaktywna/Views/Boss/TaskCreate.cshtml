@model Interactive_Agency.Models.Functional.TaskCreateModel
@{
    ViewData["Title"] = "TaskCreate";
}

<h1>Task create</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="TaskCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Project.ProjectId" />
            <div class="form-group">
                <label asp-for="@Model.ServiceProject.ServiceId" class="control-label">Task name</label>
                <select class="form-control" asp-for="@Model.ServiceProject.ServiceId">
                    <option value="">Select task</option>
                    @{
                        foreach (var item in Model.Services)
                        {
                            <option class="form-control" value="@item.ServiceId">@item.ServiceName</option>
                        }
                    }
                </select>
                <span asp-validation-for="@Model.ServiceProject.ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceProject.Description" class="control-label">Task description</label>
                <input type="text" class="form-control" asp-for="@Model.ServiceProject.Description" />
                <span asp-validation-for="ServiceProject.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceProject.AssignStart" class="control-label">Task start</label>
                <input type="datetime-local" class="form-control" asp-for="@Model.ServiceProject.AssignStart" />
                <span asp-validation-for="ServiceProject.AssignStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceProject.AssignEnd" class="control-label">Task end</label>
                <input type="datetime-local" class="form-control" asp-for="@Model.ServiceProject.AssignEnd" />
                <span asp-validation-for="ServiceProject.AssignEnd" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.ServiceProject.Status" value="Awaiting implementation" />
            <div class="btn-group">
                <a asp-action="ProjectDetails" asp-route-projectId="@Model.Project.ProjectId" class="btn btn-primary">Return</a>
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>