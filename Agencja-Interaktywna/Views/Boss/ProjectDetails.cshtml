@model Interactive_Agency.Models.Functional.ProjectDetailsModel
@{
    ViewData["Title"] = "ProjectDetails";
}

<h3>Project name:  @Html.DisplayFor(model => model.Project.ProjectName)</h3>
@{
    string View = "Project";
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Project logo</th>
            <th scope="col">Actions</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <img src="/@Model.Project.ProjectLogo" alt="/@Model.Project.ProjectLogo" height="100" width="100" />
            </td>
            <td>
                <a asp-action="Team" asp-route-id="@Model.Project.ProjectId" asp-route-view="@View" class="btn btn-primary">Display team</a>
                <a asp-action="Contract" asp-route-id="@Model.Project.ProjectId" class="btn btn-primary">Display package</a>
                <a asp-action="ProjectEdit" asp-route-id="@Model.Project.ProjectId" class="btn btn-primary">Edit project</a>
            </td>
            <td>
                <form asp-action="ProjectDelete" onclick="return confirm('Are you sure you want to delete the selected project?')">
                    <input type="hidden" asp-for="@Model.Project.ProjectId" />
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </form>
            </td>
        </tr>
    </tbody>
</table>
<h3>Tasks for the project</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Task name</th>
            <th scope="col">Task end</th>
            <th scope="col">Task status</th>
            <th scope="col">Actions</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Services)
        {
            <tr>
                <td>
                    @item.ServiceIdNavigation.ServiceName
                </td>
                <td>
                    @item.AssignEnd
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a asp-action="TaskDetails" asp-route-id1="@Model.Project.ProjectId" asp-route-id2="@item.ServiceId"
                   asp-route-data="@item.AssignStart" class="btn btn-primary">Details</a>
                    <a asp-action="TaskEdit" asp-route-id1="@Model.Project.ProjectId" asp-route-id2="@item.ServiceId"
                   asp-route-data="@item.AssignStart" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <form asp-action="TaskDelete" asp-route-id1="@Model.Project.ProjectId" asp-route-id2="@item.ServiceId"
                      asp-route-data="@item.AssignStart" onclick="return confirm('Are you sure you want to delete the selected task?')">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-primary">Return</a>
<a asp-action="TaskCreate" asp-route-id="@Model.Project.ProjectId" class="btn btn-primary">Add task</a>