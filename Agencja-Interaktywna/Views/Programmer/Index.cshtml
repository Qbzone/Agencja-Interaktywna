@model List<Interactive_Agency.Models.Project>
@{
    ViewData["Title"] = "Index";
}

<h1>Witaj @ViewBag.userEmail </h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Logo projektu</th>
            <th scope="col">Nazwa projektu</th>
            <th scope="col">Podgląd</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    <img src="/@item.ProjectLogo" alt="/@item.ProjectLogo" height="100" width="100" />
                </td>
                <td>
                    @item.ProjectName
                </td>

                <td>
                    <a asp-action="ProjectDetails" asp-route-id="@item.ProjectId" class="btn btn-primary">Podgląd</a>
                </td>
            </tr>
        }
    </tbody>
</table>