@model List<Agencja_Interaktywna.Models.Team>
@{
    ViewData["Title"] = "Teams";
}

<h1>Zespoły</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nazwa zespołu</th>
            <th scope="col">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            item.Widok = "Teams";
            <tr>
                <td>
                    @item.Nazwa
                </td>
                <td>
                    <a asp-action="Team" asp-route-id="@item.IdZespol" asp-route-view="@item.Widok" class="btn btn-primary">Wyświetl zespół</a>
                </td>
            </tr>
        }
    </tbody>
</table>