@model Agencja_Interaktywna.Models.Functional.TeamEditModel
@{
    ViewData["Title"] = "TeamEdit";
}

<h1>Edycja zespołu</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="TeamsEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Zespol.IdZespol" />
            <div class="form-group">
                <label asp-for="Zespol.Nazwa" class="control-label">Nazwa</label>
                <input type="text" class="form-control" asp-for="@Model.Zespol.Nazwa" />
                <span asp-validation-for="ErrorHandler1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Pracowniks" class="control-label">Lista pracowników</label>
                <table class="table">
                    @for (int i = 0; i < Model.Pracowniks.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(x => Model.Pracowniks[i].Id)
                                @Html.DisplayFor(it => Model.Pracowniks[i].Nazwa)
                            </td>
                            <td>
                                @Html.CheckBoxFor(it => Model.Pracowniks[i].IsChecked, new { Style = "vertical-align: 3px" })
                            </td>
                        </tr>
                    }
                </table>
                <span asp-validation-for="Pracowniks" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <a asp-action="Teams" class="btn btn-primary">Wstecz</a>
                <input type="submit" value="Potwierdź zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

