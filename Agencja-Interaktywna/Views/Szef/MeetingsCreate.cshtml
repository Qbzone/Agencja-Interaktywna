@model Agencja_Interaktywna.Models.Functional.MeetingCreateModel
@{
    ViewData["Title"] = "MeetingCreate";
}

<h1>Tworzenie Spotkania</h1>
<div class="row">
<div class="col-md-4">
    <form method="post" asp-action="MeetingsCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PracownikKlient.MiejsceSpotkania" class="control-label">Miejsce spotkania</label>
            <input type="text" class="form-control" asp-for="@Model.PracownikKlient.MiejsceSpotkania" />
            <span asp-validation-for="PracownikKlient.MiejsceSpotkania" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PracownikKlient.DataRozpoczeciaSpotkania" class="control-label">Data rozpoczęcia spotkania</label>
            <input type="datetime-local" class="form-control" asp-for="@Model.PracownikKlient.DataRozpoczeciaSpotkania" />
            <span asp-validation-for="PracownikKlient.DataRozpoczeciaSpotkania" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PracownikKlient.DataZakonczeniaSpotkania" class="control-label">Data zakończenia spotkania</label>
            <input type="datetime-local" class="form-control" asp-for="@Model.PracownikKlient.DataZakonczeniaSpotkania" />
            <span asp-validation-for="PracownikKlient.DataZakonczeniaSpotkania" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PracownikKlient.IdKlient" class="control-label">Klient</label>
            <select class="form-control" asp-for="@Model.PracownikKlient.IdKlient">
                <option value="">Wybierz klienta</option>
                @{
                    foreach (var item in Model.klients)
                    {
                        <option class="form-control" value="@item.IdKlient">@item.IdKlientNavigation.AdresEmail</option>
                    }
                }
            </select>
            <span asp-validation-for="@Model.PracownikKlient.IdKlient" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PracownikKlient.IdPracownik" class="control-label">Pracownik</label>
            <select class="form-control" asp-for="@Model.PracownikKlient.IdPracownik">
                <option value="">Wybierz pracownika</option>
                @{
                    foreach (var item in Model.pracowniks)
                    {
                        <option class="form-control" value="@item.IdPracownik">@item.IdPracownikNavigation.AdresEmail</option>
                    }
                }
            </select>
            <span asp-validation-for="@Model.PracownikKlient.IdPracownik" class="text-danger"></span>
        </div>
        <div class="btn-group">
            <a asp-action="Meetings" class="btn btn-primary">Wstecz</a>
            <input type="submit" value="Zatwierdź" class="btn btn-primary"/>
        </div>
    </form>
    </div>
    </div>


