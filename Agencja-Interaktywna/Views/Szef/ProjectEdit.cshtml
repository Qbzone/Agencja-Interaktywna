@model Agencja_Interaktywna.Models.Functional.ProjectCreateModel
@{
    ViewData["Title"] = "ProjectEdit";
}

<h1>Edycja projektu</h1>
<form method="post" asp-action="ProjectEdit">
    <div asp-validation-summary="ModelOnly"></div>
     <input type="hidden" asp-for="@Model.projekt.IdProjekt" />
    <div>
        Nazwa: <input type="text" asp-for="@Model.projekt.Nazwa"/>
        <span asp-validation-for="projekt.Nazwa"></span>
    </div>
    <div>
        Logo: <input type="text" asp-for="@Model.projekt.Logo"/>
        <span asp-validation-for="projekt.Logo"></span>
    </div>
    <div>
        Zespół: <select name="IdZespol" asp-for="@Model.zespol.IdZespol">
            @{
                foreach (var item in Model.zespols)
                {
                    <option value="@item.IdZespol">@item.Nazwa</option>
                }
            }
        </select>
        <span asp-validation-for="@Model.zespol.IdZespol"></span>
    </div>
    <div>
        Firma: <select name="IdFirma" asp-for="@Model.projekt.IdFirma">
            @{
                foreach (var item in Model.firmas)
                {
                    <option value="@item.IdFirma">@item.Nazwa</option>
                }
            }
        </select>
        <span asp-validation-for="@Model.projekt.IdFirma"></span>
    </div>
    <div>
        Pakiet: <select name="IdPakiet" asp-for="@Model.pakiet.IdPakiet">
            @{
                foreach (var item in Model.pakiets)
                {
                    <option value="@item.IdPakiet">@item.Nazwa</option>
                }
            }
        </select>
        <span asp-validation-for="@Model.pakiet.IdPakiet"></span>
    </div>
    <div>
        <input type="submit" value="Potwierdź zmianę" />
    </div>
</form>
<a href="Index" onClick="history.go(-1); return false;"> Wróć</a>