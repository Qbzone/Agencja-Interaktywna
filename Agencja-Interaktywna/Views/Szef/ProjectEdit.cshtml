@model Agencja_Interaktywna.Models.Functional.ProjectEditModel
@{
    ViewData["Title"] = "ProjectEdit";
}

<h1>Edycja projektu</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ProjectEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.projekt.IdProjekt" />
            <input type="hidden" asp-for="@Model.IdZespol" />
            <input type="hidden" asp-for="@Model.IdPakiet" />
            <input type="hidden" asp-for="@Model.projekt.Logo"/>
            <div class="form-group">
                <label asp-for="projekt.Nazwa" class="control-label">Nazwa</label>
                <input type="text" class="form-control" asp-for="@Model.projekt.Nazwa" />
                <span asp-validation-for="ErrorHandler1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="projekt.Logo" class="control-label">Logo projektu</label>
                <img src="/@Model.projekt.Logo" alt="/@Model.projekt.Logo" height="100" width="100" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.zespol.IdZespol" class="control-label">Zespół</label>
                <select class="form-control" asp-for="@Model.zespol.IdZespol">
                    @{
                        foreach (var item in Model.zespols)
                        {
                            <option value="@item.IdZespol">@item.Nazwa</option>
                        }
                    }
                </select>
                <span asp-validation-for="ErrorHandler4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.projekt.IdFirma" class="control-label">Klient</label>
                <select class="form-control" asp-for="@Model.projekt.IdFirma">
                    @{
                        foreach (var item in Model.firmas)
                        {
                            <option value="@item.IdFirma">@item.Nazwa</option>
                        }
                    }
                </select>
                <span asp-validation-for="ErrorHandler2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.pakiet.IdPakiet" class="control-label">Pakiet</label>
                <select class="form-control" asp-for="@Model.pakiet.IdPakiet">
                    @{
                        foreach (var item in Model.pakiets)
                        {
                            <option value="@item.IdPakiet">@item.Nazwa</option>
                        }
                    }
                </select>
                <span asp-validation-for="ErrorHandler3" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="ProjectDetails" asp-route-id="@Model.projekt.IdProjekt" class="btn btn-primary">Wstecz</a>
                <input type="submit" value="Zatwierdź" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
