@model Agencja_Interaktywna.Models.Functional.TaskCreateModel
@{
    ViewData["Title"] = "TaskCreate";
}

<h1>Tworzenie Zadania</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="TaskCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.projekt.IdProjekt" />
            <div class="form-group">
                <label asp-for="@Model.UslugaProjekt.IdUsluga" class="control-label">Nazwa zadania</label>
                <select class="form-control" asp-for="@Model.UslugaProjekt.IdUsluga">
                    <option value="">Wybierz zadanie</option>
                    @{
                        foreach (var item in Model.uslugas)
                        {
                            <option class="form-control" value="@item.IdUsluga">@item.Nazwa</option>
                        }
                    }
                </select>
                <span asp-validation-for="@Model.UslugaProjekt.IdUsluga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UslugaProjekt.Opis" class="control-label">Opis zadania</label>
                <input type="text" class="form-control" asp-for="@Model.UslugaProjekt.Opis" />
                <span asp-validation-for="UslugaProjekt.Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UslugaProjekt.DataPrzypisaniaZadania" class="control-label">Data przypisania zadania</label>
                <input type="datetime-local" class="form-control" asp-for="@Model.UslugaProjekt.DataPrzypisaniaZadania" />
                <span asp-validation-for="UslugaProjekt.DataPrzypisaniaZadania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UslugaProjekt.DataZakonczeniaZadania" class="control-label">Data zakończenia zadania</label>
                <input type="datetime-local" class="form-control" asp-for="@Model.UslugaProjekt.DataZakonczeniaZadania" />
                <span asp-validation-for="UslugaProjekt.DataZakonczeniaZadania" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.UslugaProjekt.Status" value="Oczekuje na realizację" />
            <div>
                <a asp-action="ProjectDetails" asp-route-id="@Model.projekt.IdProjekt" class="btn btn-primary">Wstecz</a>
                <input type="submit" value="Zatwierdź" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
