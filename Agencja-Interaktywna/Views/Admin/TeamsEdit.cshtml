@model Interactive_Agency.Models.Functional.TeamEditModel
@{
    ViewData["Title"] = "TeamEdit";
}

<h1>Team Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="TeamsEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger" />
            <input type="hidden" asp-for="@Model.Team.TeamId" />
            <div class="form-group">
                <label asp-for="Team.TeamName" class="control-label">Team name</label>
                <input type="text" class="form-control" asp-for="@Model.Team.TeamName" />
                <span asp-validation-for="Employees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employees" class="control-label">Employee list</label>
                <table class="table">
                    @for (int i = 0; i < Model.Employees.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(x => Model.Employees[i].Id)
                                @Html.DisplayFor(it => Model.Employees[i].Name)
                            </td>
                            <td>
                                @Html.CheckBoxFor(it => Model.Employees[i].IsChecked, new { Style = "vertical-align: 3px" })
                            </td>
                        </tr>
                    }
                </table>
                <span asp-validation-for="Employees" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <a asp-action="Teams" class="btn btn-primary">Return</a>
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>