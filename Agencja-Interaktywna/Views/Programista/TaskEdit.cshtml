@model Agencja_Interaktywna.Models.Functional.TaskEditModel
@{
    ViewData["Title"] = "TaskEdit";
}

<h1>Edycja zadania</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="TaskEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.UslugaProjekt.IdProjekt" />
            <div>
                <input type="hidden" asp-for="@Model.UslugaProjekt.IdUsluga" />
                <span asp-validation-for="UslugaProjekt.IdUsluga"></span>
            </div>
            <div>
                <input type="hidden" asp-for="@Model.UslugaProjekt.Opis" />
                <span asp-validation-for="UslugaProjekt.Opis"></span>
            </div>
            <div>
                <input type="hidden" asp-for="@Model.UslugaProjekt.DataPrzypisaniaZadania" />
                <span asp-validation-for="UslugaProjekt.DataPrzypisaniaZadania"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UslugaProjekt.Status" class="control-label">Edytuj status</label>
                <select class="form-control" asp-for="@Model.UslugaProjekt.Status">
                    <option class="form-control" value="W trakcie realizacji">W trakcie realizacji</option>
                    <option class="form-control" value="Zakończone">Zakończone</option>
                </select>
                <span asp-validation-for="@Model.UslugaProjekt.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UslugaProjekt.DataZakonczeniaZadania" class="control-label">Data zakończenia zadania</label>
                <input class="form-control" type="datetime-local" asp-for="@Model.UslugaProjekt.DataZakonczeniaZadania" />
                <span asp-validation-for="UslugaProjekt.DataZakonczeniaZadania" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="ProjectDetails" asp-route-id="@Model.UslugaProjekt.IdProjekt" class="btn btn-primary">Wstecz</a>
                <input type="submit" value="Potwierdź zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
