@model Interactive_Agency.Models.Person

@{
    ViewData["Title"] = "Register";
}

<h1>Rejestracja</h1>

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>Sukces!</strong>@ViewBag.Message
        </div>
    }
}
else
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AdresEmail" class="control-label">Adres E-mail</label>
                    <input asp-for="AdresEmail" class="form-control" type="email" />
                    <span asp-validation-for="AdresEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Haslo" class="control-label">Hasło</label>
                    <input asp-for="Haslo" class="form-control" type="password" />
                    <span asp-validation-for="Haslo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PotwierdzHaslo" class="control-label">Potwierdź Hasło</label>
                    <input asp-for="PotwierdzHaslo" class="form-control" type="password" />
                    <span asp-validation-for="PotwierdzHaslo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Imie" class="control-label">Imię</label>
                    <input asp-for="Imie" class="form-control" type="text" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nazwisko" class="control-label"></label>
                    <input asp-for="Nazwisko" class="form-control" type="text" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumerTelefonuPrywatny" class="control-label">Numer Telefonu - Prywatny</label>
                    <input asp-for="NumerTelefonuPrywatny" class="form-control" type="text" />
                    <span asp-validation-for="NumerTelefonuPrywatny" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumerTelefonuSluzbowego" class="control-label">Numer Telefonu - Służbowy</label>
                    <input asp-for="NumerTelefonuSluzbowego" class="form-control" type="text" />
                    <span asp-validation-for="NumerTelefonuSluzbowego" class="text-danger"></span>
                </div>
                <div class="btn-group">
                    <a asp-action="Index" class="btn btn-primary">Wstecz</a>
                    <input type="submit" value="Zarejestruj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
