@model Interactive_Agency.Models.Functional.PersonForgottenPassword

@{
    ViewData["Title"] = "ForgottenPassword";
}

<h1>Password Recovery</h1>

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong>@ViewBag.Message
        </div>
    }
}
else
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ForgottenPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger" />
                <input type="hidden" asp-for="EmailAddress" class="form-control" />
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Confirm password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="btn-group">
                    <input type="submit" value="Change password" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }